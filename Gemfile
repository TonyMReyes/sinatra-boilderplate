# frozen_string_literal: true

source 'https://rubygems.org'

ruby '2.7.1'

# Gems

# A DSL for quickly creating web applications in Ruby with minimal effort.
gem 'sinatra', '~> 2.0', '>= 2.0.8.1'
# Collection of useful Sinatra extensions
gem 'sinatra-contrib', '~> 2.0', '>= 2.0.8.1'
# declare, validate, and transform endpoint parameters
gem 'sinatra-param', '~> 1.6'
# HTTP Request Wrapper
gem 'rack', '~> 2.2'
# load all code
gem 'require_all', '~> 3.0'
# Like Make, but for Ruby
gem 'rake', '~> 13.0', '>= 13.0.1'
# HTTP 1.1 server for Ruby/Rack applications
gem 'puma', '~> 4.3'

# Development Gems
group :development do
  # Unit Tests
  gem 'minitest', '~> 5.14'
  # Custom Minitest Reporters
  gem 'minitest-reporters', '~> 1.4', '>= 1.4.2'
  # A testing API for Rack Apps
  gem 'rack-test', '~> 1.1'
  # Code style checking tool
  gem 'rubocop', '~> 0.81.0'
  # Code Coverage
  gem 'simplecov', '~> 0.18.5'
  # Reloading Rack Development Server with shotgun config.ru command
  gem 'shotgun', '~> 0.9.2'
end
